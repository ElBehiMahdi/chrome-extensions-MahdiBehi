{
  "manifest_version": 2,
  "name": "rest-http-chrome-extension",
  "version": "1.2",
  
  "description": "inspired by https://github.com/jeremys/Simple-Rest-Client-Chrome-Extension",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": "icon_32.png",
    "default_title": "rest-http-chrome-extension"
  },

  "default_locale": "en",

  "options_page": "index.html",
  "background": "background.html",
  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
